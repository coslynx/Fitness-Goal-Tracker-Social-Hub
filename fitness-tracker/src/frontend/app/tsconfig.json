{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "types": [
      "node",
      "react",
      "react-dom",
      "next",
      "next-auth",
      "axios",
      "prisma",
      "@sentry/nextjs",
      "@sentry/tracing",
      "zustand"
    ],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@frontend/*": ["src/frontend/*"],
      "@backend/*": ["src/backend/*"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}